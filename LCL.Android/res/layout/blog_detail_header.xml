<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_app_bgk"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_homeActivity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_titlebar" >

        <ImageView
            android:id="@+id/listview_context_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/head_home_normal"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/listview_context_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/widget_bar_favorite_y" />

        <TextView
            android:id="@+id/listview_context_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/listview_context_back"
            android:text="@string/app_name"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_large" />
    </RelativeLayout>

</RelativeLayout>