<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activity.ContextActivity" >

    <RelativeLayout
        android:id="@+id/listview_context_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_titlebar" >

        <include layout="@layout/blog_detail_header" />
    </RelativeLayout>

    <WebView
        android:id="@+id/listview_context_details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/listview_context_header" />

</RelativeLayout>